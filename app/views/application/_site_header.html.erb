<header class="site-header">
  <nav class="tab-bar hide-for-medium-up">
    <section class="left-small">
      <%= link_to content_tag(:span), nil, class: 'left-off-canvas-toggle menu-icon' %>
    </section>
    <section class="middle tab-bar-section">
      <h1 class="title"><span class="site-icon">Twincrest Technologies</span></h1>
    </section>
  </nav>

  <aside class="left-off-canvas-menu">
    <ul class="off-canvas-list">
      <li>
        <%= link_to root_path do %>
          <%= content_tag :span, nil, class: "fa fa-fw fa-cubes" %>
          Manufacturers
        <% end %>
      </li>
      <li>
        <%= link_to root_path do %>
          <%= content_tag :span, nil, class: "fa fa-fw fa-life-ring" %>
          Support
        <% end %>
      </li>
      <li>
        <%= link_to root_path do %>
          <%= content_tag :span, nil, class: "fa fa-fw fa-info-circle" %>
          About
        <% end %>
      </li>
      <li>
        <%= link_to root_path do %>
          <%= content_tag :span, nil, class: "fa fa-fw fa-comment" %>
          Contact
        <% end %>
      </li>
    </ul>
  </aside>

  <div class="contain-to-grid">
    <nav class="top-bar show-for-medium-up">
      <ul class="title-area">
        <li class="name">
          <h1><%= link_to "Twincrest Technologies", root_path, class: "site-icon" %></h1>
        </li>
        <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
      </ul>
      <section class="top-bar-section">
        <ul class="right">
          <li class="<%= :active if params[:controller] =~ /^manufacturers/ %>">
            <%= link_to root_path do %>
              <%# content_tag :span, nil, class: "fa fa-cubes" %>
              Manufacturers
            <% end %>
          </li>
          <li class="<%= :active if params[:controller] == "static_pages" && params[:action] == "support" %>">
            <%= link_to root_path do %>
              <%# content_tag :span, nil, class: "fa fa-life-ring" %>
              Support
            <% end %>
          </li>
          <li class="<%= :active if params[:controller] == "static_pages" && params[:action] == "about" %>">
            <%= link_to root_path do %>
              <%# content_tag :span, nil, class: "fa fa-info-circle" %>
              About
            <% end %>
          </li>
          <li class="<%= :active if params[:controller] == "static_pages" && params[:action] == "contact" %>">
            <%= link_to root_path do %>
              <%# content_tag :span, nil, class: "fa fa-comment" %>
              Contact
            <% end %>
          </li>
        </ul>
      </section>
    </nav>
  </div>
</header>
