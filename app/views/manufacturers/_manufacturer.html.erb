<li>
  <div class="panel radius">
    <div class="row">
      <div class="small-12 columns text-center">
        <%= link_to manufacturer do %>
          <%= manufacturer.name %>
        <% end %>
      </div>
    </div>
    <% if current_user %>
      <div class="row">
        <div class="small-6 columns">
          <span class="fa fa-bars"></span>
        </div>
        <div class="small-6 columns text-right">
          <%= link_to edit_manufacturer_path(manufacturer), title: %Q(Edit "#{manufacturer.name}") do %>
            <span class="fa fa-pencil"></span>
          <% end %>
          <%= link_to manufacturer_path(manufacturer), data: { confirm: %Q(Are you sure you want to delete "#{manufacturer.name}"? This cannot be undone.) }, method: :delete, title: %Q(Delete "#{manufacturer.name}") do %>
            <span class="fa fa-trash"></span>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</li>
