<% content_for :title, @manufacturer.name %>
<header class="page-header">
  <%= content_tag :h1, @manufacturer.name %>
</header>

<section class="row">
  <div class="medium-6 large-4 columns">
    <%= image_tag @manufacturer.logo.url, alt: @manufacturer.name, class: "manufacturer-logo" %>
  </div>
  <div class="medium-6 large-8 columns large-text-columns-2">
    <%= simple_format @manufacturer.description %>
  </div>
</section>
