<% content_for :title, "Manufacturers || #{@manufacturer.name}" %>
<header class="page-header">
  <%= content_tag :h1, @manufacturer.name %>
</header>

<section class="row">
  <div class="medium-6 large-4 columns">
    <p><%= image_tag attachment_url(@manufacturer, :logo, filename: "#{@manufacturer.name.parameterize}_logo"), alt: @manufacturer.name, class: "manufacturer-logo" %></p>
    <p>
      <%= link_to @manufacturer.web_url, class: "button expand radius small", target: "_blank" do %>
        <span class="fa fa-globe"></span>
        Visit website
      <% end %>
      <%= link_to @manufacturer.support_url, class: "button expand radius small", target: "_blank" do %>
        <span class="fa fa-life-ring"></span>
        Get support
      <% end if @manufacturer.support_url.present? %>
    </p>
  </div>
  <div class="medium-6 large-8 columns large-text-columns-2">
    <%= simple_format @manufacturer.description %>
  </div>
</section>
